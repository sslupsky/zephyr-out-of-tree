CONFIG_SAM0_RTC_TIMER=y
CONFIG_SYS_CLOCK_HW_CYCLES_PER_SEC=32768

# TICKS_PER_SEC must be a factor of CYCLES_PER_SEC
# otherwise there is an accumulating time error
# Worst case rtc sync busy time is about 360us
# So, max TICKS_PER_SEC=2048
# However, it appears there is a start up time
# maybe related to the DFLL that is causing
# instability when using a tick rate faster
# than 1024
CONFIG_SYS_CLOCK_TICKS_PER_SEC=1024

